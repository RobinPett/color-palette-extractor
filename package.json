{
  "name": "color-palette-extractor",
  "version": "1.0.0",
  "description": "Load image and extract palettes",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node src/js/index.js",
    "test": "jest --detectOpenHandles --verbose --coverage"
  },
  "author": "Robin Pettersson",
  "license": "GNU",
  "devDependencies": {
    "@babel/preset-env": "^7.25.4",
    "babel-jest": "^29.7.0",
    "canvas": "^2.11.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^25.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "verbose": true,
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
